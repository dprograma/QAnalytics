                center_y: self.parent.center_y
                md_bg_color: 0,0,0,0
                on_release: 
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
        
        MDCard:
            id: signup_card
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: (.6, .72)
            padding: 40
            spacing: 20
            orientation: "vertical"
            MDLabel:
                id: signup_label
                text: "CREATE A NEW ACCOUNT"
                font_size: 22
                halign: "center"
            MDLabel:
                id: errors
                text: ""
                font_size: 15
                halign: "center"
            MDTextField:
                id: signup_field
                hint_text: "Email"
                icon_right: "account"
                helper_text: "There will always be an email"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5}
            MDTextField:
                id: signuppwd_field
                hint_text: "Password"
